<%- include('./base/header.ejs') %>
<!-- starting of Header -->
<header id="header" class="header fixed-top d-flex align-items-center">

    <!-- Start Logo -->
    <div class="d-flex align-items-center justify-content-between">
        <a href="adminpanel.ejs" class="logo d-flex align-items-center">
            <img src="/images/logo.jpg" alt="">
            <span class="d-none d-lg-block">OurAdmins</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>
    <!-- End Logo -->

    <!-- start Search Bar -->
    <div class="search-bar">
        <form class="search-form d-flex align-items-center" method="POST" action="#">
            <input type="text" name="query" placeholder="Search" title="Enter search keyword">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
        </form>
    </div>
    <!-- End Search Bar -->

    <!-- Start Search Icon -->
    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li>
            <!-- End Search Icon-->
            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <img src="" alt="Profile" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2">Ayushi Jha</span>
                </a><!-- End Profile Iamge Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/profile">
                            <i class="bi bi-person"></i>
                            <span>My Profile</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-gear"></i>
                            <span>Account Settings</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/login">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Sign Out</span>
                        </a>
                    </li>
                </ul><!-- End Profile Dropdown Items -->
            </li><!-- End Profile Nav -->
        </ul>
    </nav><!-- End Icons Navigation -->

</header><!-- End Header -->
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="container p-4 p-md-5">
                    <h1 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center text-white">Add a New Book</h1>
                    <form action="/add/book" method="post">
                        <!-- Book Title and Author -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="bookTitle" class="form-label text-white">Book Title</label>
                                    <input type="text" class="form-control form-control-lg" id="bookTitle"
                                        name="bookTitle" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="bookAuthor" class="form-label text-white">Book Author</label>
                                    <input type="text" class="form-control form-control-lg" id="bookAuthor"
                                        name="bookAuthor" required>
                                </div>
                            </div>
                        </div>

                        <!-- Publisher and Language -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="publisherName" class="form-label text-white">Publisher Name</label>
                                    <input type="text" class="form-control form-control-lg" id="publisherName"
                                        name="publisherName" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="language" class="form-label text-white">Language</label>
                                    <input type="text" class="form-control form-control-lg" id="language"
                                        name="language" required>
                                </div>
                            </div>
                        </div>

                        <!-- Edition and ISBN -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="edition" class="form-label text-white">Edition</label>
                                    <input type="number" class="form-control form-control-lg" id="edition"
                                        name="edition" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="isbn" class="form-label text-white">ISBN</label>
                                    <input type="text" class="form-control form-control-lg" id="isbn" name="isbn"
                                        required>
                                </div>
                            </div>
                        </div>

                        <!-- Origin and Number of Pages -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="origin" class="form-label text-white">Country of Origin</label>
                                    <input type="text" class="form-control form-control-lg" id="origin" name="origin"
                                        required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="noOfPages" class="form-label text-white">Number of Pages</label>
                                    <input type="number" class="form-control form-control-lg" id="noOfPages"
                                        name="noOfPages" required>
                                </div>
                            </div>
                        </div>

                        <!-- Price Per Unit -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <label for="pricePerUnit" class="form-label text-white">Price Per Unit</label>
                                    <input type="number" class="form-control form-control-lg" id="pricePerUnit"
                                        name="pricePerUnit" required>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-2 d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg">Add Book</button>
                        </div>

                        <!-- Error Message Display -->
                        <div id="error-message" class="text-danger mb-3">
                            <% if (typeof error !=='undefined' ) { %>
                                <%= error %>
                                    <% } %>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('./base/footer.ejs') %>